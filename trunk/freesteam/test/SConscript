main = Split("test.cpp")

tests = Split("""
	cppunit.test.cpp empty.test.cpp units.test.cpp batchtest.test.cpp zeroin.test.cpp
	region4.test.cpp b23.test.cpp boundaries.test.cpp  rhosat.test.cpp region1.test.cpp
