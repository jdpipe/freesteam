#*
    This is a new collection of units for use with EMSO

    It is modelled on, and aimed at consistency with, the units of measurement class given at
    http://cvs.sourceforge.net/viewcvs.py/freesteam/freesteam/units.h?rev=1.18&view=auto
*#


# DIMENSIONLESS

Positive as Real (Brief = "Positive General Constant", Default=1.0, Lower=0.0);
Negative as Real (Brief = "Negative General Constant", Default=-1.0, Upper=0.0);

Fraction as Positive (Brief = "Fraction" , Default=0.5, Upper=1);
Quality as Positive (Brief = "Vapour Quality", Default = 1.0, Upper = 1.0, Lower = 0.0);
Efficiency as Positive (Brief = "Efficiency", Default = 0.3, Upper = 20);

# MASS

Mass as Real (Brief = "Mass", Default = 1, Unit = "kg");

# LENGTH

Area as Positive (Brief = "Area", Default=1, Upper=1E6, Unit ="m^2");
Length as Positive (Brief = "Length", Default=1, Upper=5e6, Unit = "m");
LengthDifference as Length (Brief = "Difference of Length", Lower=-1000);
Volume as Positive (Brief = "Volume", Default=10, Lower=0, Upper=1E6, Unit = "m^3");

# TIME

Time as Real (Brief = "Time", Default = 1, Upper=1e8, Unit="s");
Frequency as Positive(Brief = "Frequency", Default=1,Lower=0,Upper=100, Unit="1/s");

# TEMPERATURE

Temperature as Real(Brief = "Temperature", Default=290, Lower=-1000, Upper=1000, Unit = "K");
AbsoluteTemperature as Temperature (Brief = "Absolute Temperature", Default=290, Lower=0, Upper=1073.15);
RelativeTemperature as Temperature;


# ELECTRICAL CURRENT

Current as Real(Brief = "Current", Unit = "A");

# ENERGY, STATICS AND DYNAMICS (M,L,T)

Pressure as Real (Brief = "Pressure", Default=5, Lower=1e-30, Upper=1000, Unit = "bar");
PressureDifference as Pressure (Brief = "Pressure Difference", Lower=-1000, Default=0.1);

Energy as Real(Brief = "Energy", Default = 1,Lower=-1e8, Upper=1e8, Unit = "J");
Power as Real(Brief = "Potency", Default = 10, Lower=0, Upper=2e9, Unit = "W");

Velocity as Real(Brief = "Velocity", Default=1, Unit = "m/s");
Speed as Velocity(Brief = "Speed", Lower = 0);

Acceleration as Real (Brief = "Acceleration", Default=9.81, Lower=-1e3, Upper=1e3, Unit = "m/s^2");

SpecificVolume as Positive (Brief = "Specific Volume", Default=0.1, Lower=2.0e-8, Upper=1e30, Unit = "m^3/kg");
Density as Real (Brief = "Mass Density", Default=1000, Lower=1e-30, Upper=5e5, Unit ="kg/m^3");

MassFlowRate as Positive (Brief = "Mass Flow Rate", Default=1000, Upper=1e10, Unit = "kg/s");
MassFlux as Positive (Brief = "Mass Flux", Default=1, Upper=1e6, Unit = "kg/s/m^2");

Heat as Energy (Brief = "Heat");
HeatRate as Power (Brief = "Heat Rate"); # NB, >= 0!

# THERMAL PROPERTIES (M,L,T,K)

Conductivity as Real (Brief = "Thermal Conductivity", Default=1.0, Lower=0.001, Upper=500, Unit = "W/m/K");

DynamicViscosity as Positive(Brief = "Viscosity", Default=1, Lower=1e-30, Upper=1e5, Unit = "Pa * s");

SpecHeatCap as Real (Brief = "Specific Heat Capacity", Default=1.0, Lower=0.1, Upper=10.0, Unit = "kJ/kg/K");  
SpecificEntropy as SpecHeatCap (Brief = "Specific entropy", Lower=0, Upper=10, Unit="kJ/kg/K", Default=5);

SpecificEnergy as Real(Brief = "SpecificEnergy", Unit = "kJ/kg");
SpecificEnthalpy as SpecificEnergy(Brief = "Mass Enthalpy", Default=500, Lower=-10000, Upper=10000, Unit = "kJ/kg");
SpecificInternalEnergy as SpecificEnergy (Brief = "Specific Internal Energy", Unit = "kJ/kg");

HTCoeff as Positive (Brief = "Heat Transfer Coefficient", Default=1, Upper=1e3, Unit = "W/m^2/K");

