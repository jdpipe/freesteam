using "pipe2";
	
FlowSheet Pipe2Test

	DEVICES
	S1 as Stream_pT;
	P as Pipe2;

	CONNECTIONS
	S1 to P.In;

	SET
	P.n = 50;
	P.D = 0.05 * "m";
	P.L = 20 * "m";
	P.eps = 1e-5 * "m";
	
	SPECIFY
	S1.p = 1 * "bar";
	S1.T = (273.15 + 25) * "K";
	S1.mdot = 0 * "kg/s";
	# P.Out.p = 1 * "bar";
	
	GUESS
	P.X([1:P.n]).rho = 997 *"kg/m^3";
	P.X([1:P.n]).mdot = 1 * "kg/s";
	P.X([1:P.n]).u = 150 *"kJ/kg";
	
	INITIAL
	
	# Set the internal state along internal nodes of the pipe
	P.X([2:P.n]).p = 1 * "bar";
	P.X([2:P.n]).u = 150 * "kJ/kg";
	P.X([2:P.n]).mdot = 0 * "kg/s";
	
	# Set the initial outlet flowrate
	# P.Out.u = 500 * "kJ/kg";
		
	OPTIONS
	outputLevel="high";
	time=[0:0.01:1] * "s";
	
end
