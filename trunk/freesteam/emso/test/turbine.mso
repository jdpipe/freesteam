using "steamequipment";

#* 
    Ideal (isentropic) turbine
*#
Model Turbine_Ideal as SteamEquipment # DF = 10 -5 +1 -3 = 3 

    VARIABLES
    P  as Power(Brief="Turbine Power");

    EQUATIONS # DF = -3
    "Mass Balance"
    In.mdot = Out.mdot;
    
    "Turbine power"
    P = In.mdot * (In.h - Out.h);
    
    "Isentropic constraint"
    Out.s = In.s;
end


#* 
    Turbine (non-isentropic, with efficiency specified)
*#
Model Turbine as SteamEquipment # DF = 10 - 6 = 4

    VARIABLES
    eta as Efficiency(Brief="Tubine efficiency"); # DF = 1
    out Out as Stream_ph; # DF = -5
    P as Power; # DF = 1
    
    EQUATIONS
    "Mass Balance"
    In.mdot = Out.mdot;
    
    "Potency"
    P = In.mdot * (In.h - Out.h);
    
    "Efficiency"
    (Out.h - In.h) = eta * (freesteam.h_ps(Out.p, In.s) - In.h);

end